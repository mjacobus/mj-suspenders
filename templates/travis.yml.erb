language: ruby
rvm:
  - 1.9.3
  - 2.0.0
  - 2.1.0
  - 2.1.1
env:
  - DB=sqlite
  - DB=mysql
  - DB=postgresql
script:
  - RAILS_ENV=test bundle exec rake db:migrate --trace
  - bundle exec rake db:test:prepare
  - bundle exec rspec spec/
before_script:
  - mysql -e 'create database <%= app_name %>_test'
  - psql -c 'create database  <%= app_name %>_test' -U postgres
branches:
  only: master
notifications:
  email:
    on_failure: change
    on_failure: always
